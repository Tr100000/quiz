{
    "$schema": "https://raw.githubusercontent.com/Tr100000/quiz/main/schemas/quiz.json",
    "title": "Example Quiz",
    "description": "This is an example quiz!",
    "quiz": [
        {
            "shuffle": true,
            "defaults": {
                "header": "Answer the following question:"  
            },
            "questions": [
                {
                    "type": "yes_or_no",
                    "text": "Is HTML a programming language?",
                    "correctAnswer": "false"
                },
                {
                    "type": "yes_or_no",
                    "text": "Is JavaScript a programming language?",
                    "correctAnswer": "true"
                },
                {
                    "type": "text_input",
                    "text": "What does CSS stand for?",
                    "correctAnswer": "Cascading Style Sheets"
                },
                {
                    "type": "multiple_choice",
                    "text": "Select one valid HTML element.",
                    "options": [
                        "&lt;a&gt;", "&lt;b&gt;", "&lt;c&gt;", "&lt;d&gt;"
                    ],
                    "correctAnswer": "1|2",
                    "correctAnswerDisplay": "&lt;a&gt; or &lt;b&gt;"
                }
            ]
        }
    ]
}
